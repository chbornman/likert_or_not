{
  "title": "All Question Types Demo",
  "description": "A demonstration form showcasing all available question types",
  "settings": {
    "allowAnonymous": false,
    "requireAuth": false,
    "autoSave": true,
    "progressBar": true,
    "estimatedTime": "10 minutes"
  },
  "sections": [
    {
      "title": "Basic Input Types",
      "description": "Standard text and selection inputs",
      "questions": [
        {
          "type": "text",
          "title": "What is your name?",
          "features": {
            "required": true,
            "placeholder": "Enter your full name",
            "charLimit": 100
          }
        },
        {
          "type": "textarea",
          "title": "Tell us about yourself",
          "features": {
            "required": false,
            "placeholder": "Share a brief introduction...",
            "rows": 4,
            "charLimit": 500
          }
        },
        {
          "type": "multiple_choice",
          "title": "What is your preferred work environment?",
          "features": {
            "required": true,
            "options": ["Remote", "Office", "Hybrid", "Flexible"],
            "allowComment": true
          }
        },
        {
          "type": "checkbox",
          "title": "Which programming languages do you know?",
          "features": {
            "required": false,
            "options": ["JavaScript", "Python", "Java", "C++", "Go", "Rust", "TypeScript", "Ruby"],
            "allowComment": true
          }
        },
        {
          "type": "dropdown",
          "title": "Select your department",
          "features": {
            "required": true,
            "options": ["Engineering", "Product", "Design", "Marketing", "Sales", "HR", "Finance"],
            "placeholder": "Choose a department"
          }
        },
        {
          "type": "yes_no",
          "title": "Do you have management experience?",
          "features": {
            "required": true,
            "allowComment": true
          }
        }
      ]
    },
    {
      "title": "Rating and Numeric Inputs",
      "description": "Questions with numeric values and ratings",
      "questions": [
        {
          "type": "likert",
          "title": "I am satisfied with my current role",
          "features": {
            "required": true,
            "scale": {
              "min": 1,
              "max": 5,
              "minLabel": "Strongly Disagree",
              "maxLabel": "Strongly Agree"
            },
            "allowComment": true
          }
        },
        {
          "type": "rating",
          "title": "How would you rate your overall experience?",
          "features": {
            "required": true,
            "min": 1,
            "max": 5,
            "ratingStyle": "stars",
            "allowComment": false
          }
        },
        {
          "type": "rating",
          "title": "Rate the difficulty of this form (1-10)",
          "features": {
            "required": false,
            "min": 1,
            "max": 10,
            "ratingStyle": "numbers"
          }
        },
        {
          "type": "number",
          "title": "How many years of experience do you have?",
          "features": {
            "required": true,
            "min": 0,
            "max": 50,
            "step": 0.5,
            "placeholder": "Enter years"
          }
        },
        {
          "type": "number",
          "title": "What is your target salary? (in thousands)",
          "features": {
            "required": false,
            "min": 0,
            "step": 5,
            "placeholder": "e.g., 100 for $100,000"
          }
        }
      ]
    },
    {
      "title": "Date and Time Inputs",
      "description": "Questions involving dates and times",
      "questions": [
        {
          "type": "date",
          "title": "When did you start your current position?",
          "features": {
            "required": true,
            "max": "2024-12-31"
          }
        },
        {
          "type": "date",
          "title": "When is your preferred start date?",
          "features": {
            "required": false,
            "min": "2024-01-01",
            "max": "2025-12-31"
          }
        },
        {
          "type": "time",
          "title": "What time do you usually start work?",
          "features": {
            "required": false
          }
        },
        {
          "type": "datetime",
          "title": "When would you like to schedule your interview?",
          "features": {
            "required": false,
            "min": "2024-01-01T09:00",
            "max": "2024-12-31T17:00"
          }
        }
      ]
    },
    {
      "title": "Mixed Question Types",
      "description": "Combining different question types in context",
      "questions": [
        {
          "type": "yes_no",
          "title": "Have you worked remotely before?",
          "features": {
            "required": true
          }
        },
        {
          "type": "multiple_choice",
          "title": "If yes, for how long?",
          "features": {
            "required": false,
            "options": ["Less than 1 year", "1-2 years", "3-5 years", "More than 5 years", "Not applicable"]
          }
        },
        {
          "type": "checkbox",
          "title": "What tools do you use for remote work?",
          "features": {
            "required": false,
            "options": ["Slack", "Zoom", "Microsoft Teams", "Discord", "Google Meet", "Jira", "Notion", "Linear"]
          }
        },
        {
          "type": "rating",
          "title": "Rate your remote work setup",
          "features": {
            "required": false,
            "min": 1,
            "max": 5,
            "ratingStyle": "stars",
            "allowComment": true
          }
        },
        {
          "type": "textarea",
          "title": "Any additional comments or feedback?",
          "features": {
            "required": false,
            "rows": 5,
            "placeholder": "Share your thoughts..."
          }
        }
      ]
    }
  ]
}